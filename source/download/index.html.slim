coffee:
  $("#file_list").html("")
  $.get 'https://s3.amazonaws.com/influxdb', (response) ->
    items = response.getElementsByTagName("Contents")
    for tag in items
      fileName = tag.getElementsByTagName("Key")[0].textContent
      if fileName.indexOf("logs/") == -1
        $("#file_list").append("<li><a href='https://s3.amazonaws.com/influxdb/" + fileName + "'>" + fileName + "</a></li>")
